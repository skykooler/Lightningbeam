{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lightningbeam",
  "version": "0.7.13-alpha",
  "identifier": "org.lightningbeam.core",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lightningbeam",
        "width": 1500,
        "height": 1024,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "fileAssociations": [
      {
        "ext": [
          "beam"
        ],
        "mimeType": "text/plain"
      }
    ]
  }
}
