{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lightningbeam",
  "version": "0.6.1-alpha",
  "identifier": "org.lightningbeam.app",
  "build": {
    "frontendDist": "../src"
  },
  
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "lightningbeam",
        "width": 1500,
        "height": 1024
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
